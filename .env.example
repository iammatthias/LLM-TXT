# =============================================================================
# LLM-TXT Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# The .env file is gitignored and should never be committed.
# =============================================================================

# -----------------------------------------------------------------------------
# x402 Payment Configuration
# -----------------------------------------------------------------------------

# Wallet address to receive USDC payments (required)
X402_PAY_TO=0xYourWalletAddress

# Network: eip155:8453 (Base mainnet) or eip155:84532 (Base Sepolia testnet)
X402_NETWORK=eip155:8453

# Facilitator URL
# Mainnet: https://api.cdp.coinbase.com/platform/v2/x402
# Testnet: https://x402.org/facilitator
X402_FACILITATOR_URL=https://api.cdp.coinbase.com/platform/v2/x402

# Base price per request (used as minimum)
X402_BASE_PRICE=$0.001

# -----------------------------------------------------------------------------
# API Keys (Secrets - never commit these!)
# -----------------------------------------------------------------------------

# Neynar API key for Farcaster data
NEYNAR_API_KEY=your-neynar-api-key

# CDP API credentials for mainnet facilitator (required for production)
# Get these from https://cdp.coinbase.com
# CDP_API_KEY_ID=your-api-key-id
# CDP_API_KEY_SECRET=your-api-key-secret

# WalletConnect Project ID (for frontend wallet connections)
VITE_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# -----------------------------------------------------------------------------
# Service URLs
# -----------------------------------------------------------------------------

# API server URL for frontends
# LOCAL DEV: Leave unset (uses /api proxy to localhost:3000)
# PRODUCTION: Set during build or in Cloudflare Pages env vars
# VITE_API_URL=https://api.llm-txt.fun

# Bluesky API service URL
BSKY_SERVICE_URL=https://public.api.bsky.app

# Snapchain/Hub URL (for Farcaster)
SNAPCHAIN_BASE_URL=http://hub.merv.fun

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# Allowed origins (comma-separated)
CORS_ORIGIN=https://llm-fid.fun,https://llm-bsky.fun,https://llm-rss.fun,https://llm-git.fun

# -----------------------------------------------------------------------------
# SDK/Testing Only (not needed for production)
# -----------------------------------------------------------------------------

# Private key for SDK integration tests (with 0x prefix)
# TEST_WALLET_PRIVATE_KEY=0x...

# API URL for integration tests
# TEST_API_URL=https://api.llm-txt.fun

# Skip integration tests
# SKIP_INTEGRATION_TESTS=false
